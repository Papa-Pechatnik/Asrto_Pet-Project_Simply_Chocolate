---

const NavLinks = [
  { title: "Home", href: "/" },
  { title: "How itâ€™s made?", href: "#production" },
  { title: "Our products", href: "#products" },
  { title: "Top sellers", href: "#top-sellers" },
  { title: "Chocolate is loved", href: "#" },
];

interface Props {
  className?: string;
}

const {className} = Astro.props;
---

<nav class:list={["nav", `${[className]}`]}>
  <ul class="nav-list">
    {
      NavLinks.map((item) => (
        <li class="nav-item">
          <a class="nav-item__link" target="_blank" href={item.href}>
            {item.title}
          </a>
        </li>
      ))
    }
  </ul>
</nav>

<style>
  .nav-list {
    display: flex;
    justify-content: space-between;
    column-gap: 1.7143rem;
  }

  .nav-item__link {
    font-family: var(--font-family-primary);
    font-weight: 500;
    font-style: normal;
    font-size: var(--font-size-primary);
    line-height: 114%;
    letter-spacing: -0.02em;
    transition: color 0.5s;
    text-wrap: nowrap;
  }

  .nav-header .nav-item__link {
    color: var(--color-primary);
  }

  .nav-footer {
    margin-top: var(--indent-24-32);
  }

  .nav-footer .nav-item__link {
    color: var(--color-secondary);
  }

  :is(.nav-header, .nav-footer) .nav-item__link:hover{
    color: var(--color-accent);
  }

  @media screen and (max-width: 1023.98px) {
    /* .header-nav {
      display: none;
    } */
  }

  @media screen and (max-width: 539.98px) {
    .nav-footer .nav-list{
    flex-direction: column;
    row-gap: var(--gap-secondary);
  }
}
</style>
